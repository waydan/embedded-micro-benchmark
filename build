#!/bin/sh

# Compilation step

CFLAGS="-c -nostdinc -nostdlib -I."

CC="clang --target=armv6m-none-eabi -fomit-frame-pointer"

asm_files=`ls source/*.s`
asm_sources="startup.s flash_config.s execution_timer.s memcpy_asm_small.s"

c_files=`ls source/*.c`
c_sources="main.c memcpy_test.c"

echo "Compiling the following source files:"
for f in asm_sources
do
    echo $f
done

for f in c_sources
do
    echo $f
done
