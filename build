#!/bin/sh

# Compilation step

CC="clang --target=armv6m-none-eabi"
CFLAGS="-c -nostdinc -nostdlib -I. -fomit-frame-pointer"

asm_files=`ls source/*.s`
asm_sources="startup.s flash_config.s execution_timer.s memcpy_asm_small.s"

c_files=`ls source/*.c`
c_sources="main.c memcpy_test.c"

mkdir -p object
cd object

echo "Compiling the following source files:"
for f in $asm_sources
do
    $CC  -c ../source/${f}
    echo "\t$f"
done

for f in $c_sources
do
    $CC $CFLAGS -Os ../source/${f}
    echo "\t$f"
done


# Linking step
LINK_SCRIPT="flash.ld"

arm-none-eabi-ld -T ../$LINK_SCRIPT *.o -o memcpy_test.elf


# Export a binary
arm-none-eabi-objcopy -O binary memcpy_test.elf memcpy_test.bin